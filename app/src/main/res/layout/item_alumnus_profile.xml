<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_alumnusPhoto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_alumnusName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="Imroatus Jake"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_alumnusPhoto" />

    <TextView
        android:id="@+id/tv_alumnusCohort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        android:paddingBottom="2dp"
        tools:text="Fakultas Ilmu Gelap 2023"
        app:layout_constraintTop_toBottomOf="@id/tv_alumnusName"
        app:layout_constraintStart_toEndOf="@id/iv_alumnusPhoto"/>

    <TextView
        android:id="@+id/tv_alumnusCareer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        tools:text="Bekerja pada PT mencari Cinta"
        app:layout_constraintTop_toBottomOf="@id/tv_alumnusCohort"
        app:layout_constraintStart_toEndOf="@id/iv_alumnusPhoto"/>

</androidx.constraintlayout.widget.ConstraintLayout>